{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "lib": ["ESNext"],
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "target": "ES2018"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
